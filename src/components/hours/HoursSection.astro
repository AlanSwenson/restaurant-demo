<div id="hours" >
  <div class="grid lg:grid-cols-12 items-center bg-gray-900">
    <!-- Hours Section -->
    <div class="lg:col-span-4 py-4">
      <div class="text-white text-center py-4">
        <h1 class="text-4xl font-amatic">HOURS</h1>
      </div>

      <div class="py-4 px-4 lg:px-8 flex flex-col items-center">
        <div class="mb-6 text-white text-center">
          <h2 class="font-bold mb-2">Main Dining Room</h2>
          <p class="justify-center">Sun - Thurs : 5:00 - 10:00</p>
          <p class="justify-center">Fri - Sat : 5:00 - 11:00</p>
        </div>

        <div class="text-white text-center">
          <h2 class="font-bold mb-2">Bar</h2>
          <p class="justify-center">Sun - Thurs : 5:00 - 1:00</p>
          <p class="justify-center">Fri - Sat : 5:00 - 2:00</p>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="lg:col-span-8">
      <div class="h-full">
        <iframe 
          class="w-full h-full min-h-[400px]"
          frameborder="0" 
          scrolling="no" 
          marginheight="0" 
          marginwidth="0"
          src="https://www.openstreetmap.org/export/embed.html?bbox=-77.03377008438112%2C38.90543175007275%2C-77.03105270862579%2C38.90704793481325&amp;layer=mapnik"
        ></iframe>
      </div>
    </div>
  </div>
</div> 