---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>{title}</title>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/4c3d8eeae0.js" crossorigin="anonymous"></script>

    <!-- Custom Fonts -->
    <link 
      href="https://fonts.googleapis.com/css?family=Amatic+SC|Cormorant+Garamond:500|Ibarra+Real+Nova&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-white">
    <slot />

    <!-- Return to Top -->
    <a 
      href="javascript:" 
      id="return-to-top"
      class="fixed bottom-8 right-8 bg-black bg-opacity-50 text-white rounded-full p-4 hidden hover:bg-opacity-70 transition-all duration-300"
    >
      <i class="fas fa-chevron-up"></i>
    </a>
  </body>
</html> 