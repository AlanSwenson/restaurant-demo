---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>{title}</title>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/4c3d8eeae0.js" crossorigin="anonymous"></script>

    <!-- Custom Fonts -->
    <link 
      href="https://fonts.googleapis.com/css?family=Amatic+SC|Cormorant+Garamond:500|Ibarra+Real+Nova&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-white">
    <slot />

    <!-- Return to Top -->
    <a 
      href="#"
      id="return-to-top"
      class="fixed bottom-8 right-8 bg-gray-900 text-white p-3 opacity-0 invisible transition-all duration-300 hover:bg-gray-800 shadow-lg"
      aria-label="Return to top"
    >
      <i class="fas fa-chevron-up text-lg"></i>
    </a>
  </body>
</html>

<script>
  const returnToTop = document.getElementById('return-to-top');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 500) {
      returnToTop?.classList.remove('opacity-0', 'invisible');
      returnToTop?.classList.add('opacity-100', 'visible');
    } else {
      returnToTop?.classList.add('opacity-0', 'invisible');
      returnToTop?.classList.remove('opacity-100', 'visible');
    }
  });
</script> 