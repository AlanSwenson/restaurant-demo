---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Page Not Found">
  <nav class="sticky top-0 bg-white shadow-sm">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-center h-16">
        <a href="/" class="text-2xl font-semibold font-['Amatic_SC']"
          >Alan's Restaurant</a
        >
      </div>
    </div>
  </nav>
  <main
    class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)] text-center px-4 bg-white"
  >
    <div class="max-w-2xl mx-auto py-16">
      <h1 class="text-8xl font-['Amatic_SC'] text-gray-900 mb-6">404</h1>
      <div class="w-24 h-0.5 bg-gray-600 mx-auto mb-8"></div>
      <p class="text-3xl text-gray-700 mb-4">Webpage Not Found</p>
      <p class="text-lg text-gray-600 mb-8">
        Sorry, this page seems to be missing.
      </p>
      <a
        href="/"
        class="inline-flex items-center px-6 py-2 text-gray-700 hover:text-gray-900 transition-colors"
      >
        BACK TO THE HOME PAGE
      </a>
    </div>
  </main>
</Layout>
